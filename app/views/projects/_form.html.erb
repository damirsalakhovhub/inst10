<%= form_with(model: project) do |form| %>
  <% if project.errors.any? %>
    <div class="errors">
      <h2><%= pluralize(project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= render "shared/input",
      label: "Name",
      name: "project[name]",
      type: "text",
      required: true,
      value: project.name
    %>
  </div>

  <div class="field">
    <%= render "shared/input",
      label: "Description",
      name: "project[description]",
      type: "text",
      value: project.description,
      placeholder: "Optional description"
    %>
  </div>

  <div class="actions">
    <%= form.submit project.persisted? ? "Update Project" : "Create Project", class: "btn btn-primary" %>
  </div>
<% end %>

