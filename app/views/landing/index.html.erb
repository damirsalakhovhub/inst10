  <section class="form-container">
    <% if user_signed_in? %>
      <p>You are signed in as <%= current_user.email %></p>
    
    <% else %>

    <div class="auth-card">
    
      <h3>Sign In</h3>
    
      <%= form_for(
        @resource,
        as: @resource_name,
        url: session_path(@resource_name),
        html: { class: "auth-form" }
      ) do |f| %>
        
        <%= render Input::InputComponent.new(
          label: "Email",
          name: "user[email]",
          type: "email",
          
          required: true,
          value: f.object.email
        ) %>
        
        <%= render Input::InputComponent.new(
          label: "Password",
          name: "user[password]",
          type: "password",
          
          required: true
        ) %>
        
        <%= render Button::ButtonComponent.new(
          text: "Sign In",
          type: "submit",
          variant: :primary
        ) %>
      <% end %>
    </div>

    <div class="auth-card">
        <h3>Sign Up</h3>
        <%= form_for(
          @resource,
          as: @resource_name,
          url: registration_path(@resource_name),
          html: { class: "auth-form" }
        ) do |f| %>
          <%= render "devise/shared/error_messages", resource: @resource %>
          <%= render Input::InputComponent.new(
            label: "Email",
            name: "user[email]",
            type: "email",
            
            required: true,
            value: f.object.email
          ) %>
          <%= render Input::InputComponent.new(
            label: "Password",
            name: "user[password]",
            type: "password",
            
            required: true
          ) %>
          <%= render Input::InputComponent.new(
            label: "Password Confirmation",
            name: "user[password_confirmation]",
            type: "password",
            
            required: true
          ) %>
          <%= render Button::ButtonComponent.new(
            text: "Sign Up",
            type: "submit",
            variant: :primary
          ) %>
        <% end %>
    <% end %>
  </section>

