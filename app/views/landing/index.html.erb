  <section style="max-width: 400px; margin: 2rem auto; padding: 2rem;">
    <% if user_signed_in? %>
      <p>Вы уже вошли как <%= current_user.email %></p>
    <% else %>
      <h3>Вход</h3>
      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { style: "display: flex; flex-direction: column; gap: 1rem;" }) do |f| %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style: "padding: 0.5rem;" %>
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "Пароль", style: "padding: 0.5rem;" %>
        <%= f.submit "Войти", style: "padding: 0.5rem; cursor: pointer;" %>
      <% end %>

      <div style="margin-top: 1rem; padding-top: 1rem; border-top: 1px solid #e0e0e0;">
        <h3>Регистрация</h3>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { style: "display: flex; flex-direction: column; gap: 1rem;" }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", style: "padding: 0.5rem;" %>
          <%= f.password_field :password, autocomplete: "new-password", placeholder: "Пароль (минимум 8 символов)", style: "padding: 0.5rem;" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Подтверждение пароля", style: "padding: 0.5rem;" %>
          <%= f.submit "Зарегистрироваться", style: "padding: 0.5rem; cursor: pointer;" %>
        <% end %>
      </div>
    <% end %>
  </section>

