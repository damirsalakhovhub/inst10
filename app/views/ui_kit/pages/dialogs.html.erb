<%= render "ui_kit/shared/layout" do %>
  <main class="ui-kit-main">
    <h1>Dialogs</h1>

    <section class="ui-kit-section">
      <h2>Basic Dialog</h2>
      <p style="margin-bottom: var(--px-16); color: var(--color-font-tres);">
        Click the button to open a dialog. Use ESC or click outside to close.
      </p>
      
      <div class="ui-kit-row" data-controller="dialog">
        <%= button_tag "Open Dialog", class: "btn btn-primary", data: { action: "click->dialog#open" } %>

        <%= render Dialog::DialogComponent.new(
          title: "Dialog Title Long Example To Show How It Behaves",
          body: "This is a basic dialog with title and content. It uses the native HTML5 dialog element for full accessibility support. This is a basic dialog with title and content. It uses the native HTML5 dialog element for full accessibility support."
        ) %>
      </div>
    </section>
  </main>
<% end %>

