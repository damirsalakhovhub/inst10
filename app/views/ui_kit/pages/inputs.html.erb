<%= render "ui_kit/shared/layout" do %>
  <main class="ui-kit-main">
    <h1>Inputs</h1>

    <section class="ui-kit-section">
      <h2>Input Sizes</h2>
      <div class="ui-kit-element-group" style="display: flex; flex-direction: column; gap: 1.5rem;">
        
        <div class="ui-kit-row">
          <span class="ui-kit-row-label">Tiny (24px)</span>
          <div class="ui-kit-row-content">
            <%= render "shared/input", name: "tiny", size: :tiny, placeholder: "Tiny input..." %>
            <%= render "shared/input", name: "tiny_icon", size: :tiny, icon: "heart", placeholder: "With icon" %>
          </div>
        </div>

        <div class="ui-kit-row">
          <span class="ui-kit-row-label">Small (32px)</span>
          <div class="ui-kit-row-content">
            <%= render "shared/input", name: "small", size: :small, placeholder: "Small input..." %>
            <%= render "shared/input", name: "small_icon", size: :small, icon: "heart", placeholder: "With icon" %>
          </div>
        </div>

        <div class="ui-kit-row">
          <span class="ui-kit-row-label">Medium (40px)</span>
          <div class="ui-kit-row-content">
            <%= render "shared/input", name: "medium", size: :medium, placeholder: "Medium input (default)..." %>
            <%= render "shared/input", name: "medium_icon", size: :medium, icon: "heart", placeholder: "With icon" %>
          </div>
        </div>

        <div class="ui-kit-row">
          <span class="ui-kit-row-label">Large (48px)</span>
          <div class="ui-kit-row-content">
            <%= render "shared/input", name: "large", size: :large, placeholder: "Large input..." %>
            <%= render "shared/input", name: "large_icon", size: :large, icon: "heart", placeholder: "With icon" %>
          </div>
        </div>

      </div>
    </section>

    <section class="ui-kit-section">
      <h2>States</h2>
      <div class="ui-kit-element-group" style="display: flex; flex-direction: column; gap: 1rem;">
        <%= render "shared/input", label: "Required", name: "req", required: true, placeholder: "Required field" %>
        <%= render "shared/input", label: "Disabled", name: "dis", disabled: true, placeholder: "Disabled field", value: "Disabled value" %>
        <%= render "shared/input", label: "Error", name: "err", error: "This field is invalid", placeholder: "Error field" %>
        <%= render "shared/input", label: "With description", name: "desc", placeholder: "Input with description", description: "Helper text that lives below the input." %>
        <%= render "shared/input", label: "Error + description", name: "err_desc", error: "This field is invalid", description: "Helper text appears below the error.", placeholder: "Error with description" %>
      </div>
    </section>

  </main>
<% end %>
