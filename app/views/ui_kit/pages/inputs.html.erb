<%= render "ui_kit/shared/layout" do %>
  <main class="ui-kit-main">
    <h1>Inputs</h1>

    <section class="ui-kit-section">
      <h2>Input Variants</h2>
      <div class="ui-kit-element-group">
        <div class="ui-kit-element">
          <%= render "shared/input",
            label: "Label",
            name: "input_basic",
            placeholder: "Placeholder text"
          %>
        </div>

        <div class="ui-kit-element">
          <%= render "shared/input",
            label: "Required Field",
            name: "input_required",
            placeholder: "This field is required",
            required: true
          %>
        </div>

        <div class="ui-kit-element">
          <%= render "shared/input",
            label: "With Icon",
            name: "input_icon",
            placeholder: "Input with left icon",
            icon: "heart"
          %>
        </div>

        <div class="ui-kit-element">
          <%= render "shared/input",
            label: "Disabled Input",
            name: "input_disabled",
            placeholder: "Cannot edit this field",
            disabled: true
          %>
        </div>

        <div class="ui-kit-element">
          <%= render "shared/input",
            label: "Input with Error",
            name: "input_error",
            placeholder: "Enter email",
            type: "email",
            error: "Please include an '@' in the email address"
          %>
        </div>
      </div>
    </section>
  </main>
<% end %>

