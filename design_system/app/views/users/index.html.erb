<div class="users-index">
  <h1>Users</h1>

  <%# Example of Pagy pagination %>
  <div class="users-list">
    <% @users.each do |user| %>
      <div class="user-card">
        <p><%= user.email %></p>
        <p><%= user.admin? ? "Admin" : "User" %></p>
        <%= link_to "View", user_path(user) %>
      </div>
    <% end %>
  </div>

  <%# Pagy navigation %>
  <nav class="pagination">
    <%== pagy_nav(@pagy) %>
  </nav>
</div>

